// gluster的配置文件
{
    "Group"    : "", // 集群分组名称，不同的集群分组之间不能进行数据同步
    "SavePath" : "", // 数据保存路径(请保证运行gcluster的用户有权限写入)
    "Role"     : 0,  // (可选)集群角色，
                     // 0:server,  参与RAFT选举，可以成为leader，也可以成为follower，一个集群至少需要一个server，
                     // 1:client,  (可选)客户端角色不参与选举，只能为follower，从leader同步数据，
                     // 2:monitor, (可选)节点监控服务端，一个集群中最多只能有一个monitor，如果配置有多个，只有其中一个能够生效，其余的被转换为client
                     // 默认值为：0
    "MinNode"  : 1,  // (可选)组成gluster的最小节点数量，默认为1，常见集群一般为3
    "LogPath"  : "", // (可选)保存日志文件的文件夹目录路径，如果为空，表示不写入文件，直接输出到终端
    // (可选)监控节点IP或域名地址
    "Monitor"  : {
        "WebUIPath" : "", // WebUI界面文件的本地根目录
        "AdminUser" : "", // 管理员账号(为空表示不需要验证登录)
        "AdminPass" : ""  // 管理员密码(为空表示不需要验证登录)
    },
    "Peers"    : [], // (可选)初始化节点列表，包含自定义的所需添加的服务器IP或者域名列表
    "DataMap"  : {}, // (可选)初始化自定义的k-v数据
    "Service"  : {}  // (可选)初始化服务配置
}